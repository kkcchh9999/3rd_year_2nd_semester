<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/first_input"
        android:layout_toStartOf="@id/first_input"
        android:text="@string/first_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/second_input"
        android:layout_toStartOf="@id/second_input"
        android:text="@string/second_input"/>

    <EditText
        android:id="@+id/first_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/second_input"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/second_input"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add"
        />

</RelativeLayout>